{
    "manifest_version": 2,
    "name": "Konscience for Facebook on Chrome",
    "version": "0.1",
    "browser_action": {
        "default_icon": "konscience.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*",
                "http://www.facebook.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "*://*/*"
      ]
}